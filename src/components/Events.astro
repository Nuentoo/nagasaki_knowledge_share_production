---
const eventPosts = [{
    eventName: "波佐見陶器祭り",
    description: "陶器市のイベント。鋳込み・絵付（有料）体験などのコーナーも",
    image: "",
    season: "春",
    area: "波佐見町",
  },{
    eventName: "平戸じゃんがら",
    description: "平戸に古くから伝わる先祖供養と、豊年祈願の踊り「じゃんがら」を披露するイベント",
    image: "",
    season: "夏",
    area: "平戸市",
  },{
    eventName: "対馬アリラン祭り",
    description: "江戸時代の「朝鮮通信使」を再現した衣装の行列などの催しが行われるイベント",
    image: "",
    season: "夏",
    area: "対馬市",
  },{
    eventName: "チャンココ",
    description: "花笠、腰みの、太鼓を持った姿で念仏踊り「チャンココ」を踊り、先祖の御霊を鎮めるイベント",
    image: "",
    season: "夏",
    area: "五島市",
  },{
    eventName: "精霊流し",
    description: "故人の霊を弔うために手作りした船を曳きながら街中を練り歩くイベント",
    image: "",
    season: "夏",
    area: "長崎市",
  },{
    eventName: "オーモンデー",
    description: "カラフルな衣装を身に付け、かねの音に合わせて念仏踊り「オーモンデー」を踊るイベント",
    image: "",
    season: "夏",
    area: "五島市",
  },{
    eventName: "へトマト",
    description: "「豊作」「大漁」「子孫繁栄」を祈願したイベント。大草履を担いで練り歩くなどの催しが行われる",
    image: "",
    season: "冬",
    area: "五島市",
  }];

  const uniqueSeason = [...new Set(eventPosts.map((eventPost)=>eventPost.season))]
  const uniqueArea = [...new Set(eventPosts.map((eventPost)=>eventPost.area))]
---
<!-- ここにHTML -->
<section class="events">
    <h2 class="events__subTitle subTitle">イベント</h2>
    <ul class="events__seasonList"><li class="seasonItem">{uniqueSeason}</li></ul>
    <ul class="events__areaList"><li class="areaItem">{uniqueArea}</li></ul>
    <ul class="events__postList">
        {eventPosts.map((eventPost)=>(
          <li class="events__postItem">
            <img class="events__img" src="{image}" alt="">
            <h3 class="events__name">{eventPost.eventName}</h3>
            <p class="events__description">{eventPost.description}</p>
            <ul class="events__tag">
                <li class="seasonItem">{eventPost.season}</li>
                <li class="areaItem">{eventPost.area}</li>
            </ul>
        </li>
        ))}
    </ul>
</section>

